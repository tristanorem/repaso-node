<%- include('header') -%>
    <h1><%= pelicula.title %></h1>
    <ul>
        <li>
            Duracion:<%=pelicula.length%> 
        </li>
        <li>
            Fecha de Estreno:<%=pelicula.release_date%> 
        </li>
        <li>
            Premios:<%=pelicula.awards%> 
        </li>
        <li>
            Rating:<%=pelicula.rating%> 
        </li>
        <li>
            Genero:<%=pelicula.genres? pelicula.genres.name : 'sin nombre' %> 
        </li>
        <li>
            Actores:
            <ul>
                <% for (let i=0; i < pelicula.actors.length ; i ++) { %>
                    <li>
                            <%=pelicula.actors[i].first_name %>
                            <%=pelicula.actors[i].last_name %>
                    </li>
                <%} %>
            </ul>
        </li>
    </ul>
    <a href="/peliculas/editar/<%=pelicula.id%>">
        <button>Editar</button>
    </a>
        <form action="/peliculas/borrar/<%=pelicula.id%>" method="POST"> 
            <button type="submit">Borrar</button>
         </form>
        
    
<%- include('footer') -%>